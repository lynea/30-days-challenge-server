datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @default(autoincrement()) @id
  email      String      @unique
  name       String?
  challenges Challenge[]
}

model Challenge {
  id            Int     @default(autoincrement()) @id
  title         String
  description   String?
  owner         User?   @relation(fields: [ownerId], references: [id])
  ownerId       Int?
  daysCompleted Int?
  month         Months?
}

enum Months {
  JANUARY
  FEBRUARY
  MARCH
  APRIL
  MAY
  JUNE
  JULY
  AUGUST
  SEPTEMBER
  OCTOBER
  NOVEMBER
  DECEMBER
}